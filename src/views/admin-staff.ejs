<%- contentFor('js') %>
<script src="/public/assets/js/custom.js"></script>
<script>
(function () {
    let page = 1, pageSize = 10, search = "", target;     // Params for url query

    $(document).ready(function (e) {
        // Get filter values
        const urlQuery = window.location.search.replace("?", "");
        const queryParams = urlQuery.split("&");

        queryParams.forEach(param => {
            // example param: page=1 || pageSize=4
            const ele = param.split("=");
            if (ele[0] == "page") page = +ele[1];
            if (ele[0] == "search") search = ele[1];
        })

        // Get data & render items
        $.ajax({
            url: "/api/user/pagination-staff" + buildQueryUrl(page, pageSize, search),
            method: "get",
            success: function (response) {
                if (!response.status || response.data[0].pagination.length == 0) return;

                // Handle data into html.
                let index = (page - 1) * pageSize;
                const items = response.data[0].data;
                const totalRow = response.data[0].pagination[0].totalRow;   // Total row of this filter (price + category + search)
                if (items.length > 0) {
                    let itemsHtml = ``;
                    items.forEach(item => {
                        const date = new Date(item.createdAt);
                        const dateFormatted = `${date.toLocaleString("default", {month: "short"})} ${date.getDate()}, ${date.getFullYear()}`;

                        itemsHtml += `
                        <tr id="${item._id}">
                            <td>
                                <b>${++index}</b>
                            </td>
                            <td>
                                ${item.username}
                            </td>
                            <td>
                                ${item.fullname}
                            </td>
                            <td>
                                ${item.phone}
                            </td>
                            <td>
                                ${item.role.name === "Admin" ? `<span class="badge badge-primary-lighten">Admin</span>` : `<span class="badge badge-info-lighten">Staff</span>`}
                            </td>
                            <td>
                                ${item.isActive ? `<span class="badge badge-success-lighten">Active</span>` : `<span class="badge badge-danger-lighten">Disabled</span>`}
                            </td>
                            <td>
                                ${dateFormatted}
                            </td>

                            <td class="table-action">
                                <a href="javascript:void(0);" class="action-icon btn-view"> <i
                                        class="mdi mdi-eye"></i></a>
                                <a href="javascript:void(0);" class="action-icon btn-edit"> <i
                                        class="mdi mdi-square-edit-outline"></i></a>
                                ${ item.role.name === "Admin" ? "" : `
                                <a href="javascript:void(0);" class="action-icon btn-status"> <i
                                        class="mdi ${item.isActive ? "mdi-cancel" : "mdi-lock-open-variant-outline"}"></i></a>
                                <a href="javascript:void(0);" class="action-icon btn-delete"> <i
                                        class="mdi mdi-delete"></i></a>
                                ` }
                            </td>
                        </tr>`;
                    })

                    $("#items-show").html(itemsHtml);
                    renderPagination("#pagination", totalRow / pageSize, page, buildQueryUrl(page, pageSize, search));
                }
            },
            error: function (err) {

            }
        })
    })

    // Action: create
    $("#btn-add").click(function (e) {
        $("#modal-add").modal("show");
    })

    $("#modal-add button[type='submit']").click(function (e) {
        const username = $("#add-username").val();
        const password = $("#add-password").val();
        const fullname = $("#add-fullname").val();
        const age = $("#add-age").val();
        const phone = $("#add-phone").val();
        const address = $("#add-address").val();
        const role = $("#add-role").val();
        const errorFeedback = $("#add-error");

        if (!username) return errorFeedback.text("Username cannot be null!").addClass("d-block");
        else errorFeedback.removeClass("d-block");

        if (!password) return errorFeedback.text("Password cannot be null!").addClass("d-block");
        else errorFeedback.removeClass("d-block");

        if (age < 0 || age > 100) return errorFeedback.text("Age is invalid!").addClass("d-block");
        else errorFeedback.removeClass("d-block");

        if (!role) return errorFeedback.text("Please choose one role before continue!").addClass("d-block");
        else errorFeedback.removeClass("d-block");

        $.ajax({
            url: "/api/user/create-staff",
            method: "post",
            data: {
                username,
                password,
                fullname,
                age,
                phone,
                address,
                role,
            },
            success: (response) => {
                if (response.status) window.location = "";
            },
            error: (err) => {
                return errorFeedback.text(err.responseJSON.msg).addClass("d-block");
            }
        })
    })

    // Action: view
    $(document).on("click", ".btn-view", function (e) {
        target = $(this).parent().parent().attr("id");

        $.ajax({
            url: `/api/user/${target}`,
            method: "get",
            success: (response) => {
                if (response.status) {
                    $("#view-username").val(response.data.username);
                    $("#view-role").val(response.data.role.name);
                    $("#view-fullname").val(response.data.fullname);
                    $("#view-age").val(response.data.age);
                    $("#view-phone").val(response.data.phone);
                    $("#view-address").val(response.data.address);
                    $("#view-gmail").val(response.data.email);
                    $("#view-github").val(response.data.github);
                    $("#modal-view").modal("show");
                }
            }
        })
    })

    // Action: edit
    $(document).on("click", ".btn-edit", function (e) {
        target = $(this).parent().parent().attr("id");

        $.ajax({
            url: `/api/user/${target}`,
            method: "get",
            success: (response) => {
                if (response.status) {
                    $("#edit-fullname").val(response.data.fullname);
                    $("#edit-age").val(response.data.age);
                    $("#edit-phone").val(response.data.phone);
                    $("#edit-address").val(response.data.address);
                    $(`#edit-role option[value='${response.data.role._id}']`).prop("selected", "selected");
                    $("#modal-edit").modal("show");
                }
            }
        })
    })

    $("#modal-edit button[type='submit']").click(function (e) {
        const fullname = $("#edit-fullname").val();
        const age = $("#edit-age").val();
        const phone = $("#edit-phone").val();
        const address = $("#edit-address").val();
        const role = $("#edit-role").val();
        const errorFeedback = $("#edit-error");

        if (!fullname) return errorFeedback.text("Full name cannot be null!").addClass("d-block");
        else errorFeedback.removeClass("d-block");

        $.ajax({
            url: `/api/user/update-info-staff`,
            method: "put",
            data: {
                idUser: target,
                fullname,
                age,
                phone,
                address,
                role,
            },
            success: (response) => {
                if (response.status) window.location = "";
            },
            error: (err) => {
                return errorFeedback.text(err.responseJSON.msg).addClass("d-block");
            }
        })
    })

    // Action: delete
    $(document).on("click", ".btn-delete", function (e) {
        target = $(this).parent().parent().attr("id");
        $("#modal-delete").modal("show");
    })

    $("#modal-delete button[type='submit']").click(function (e) {
        $.ajax({
            url: `/api/user/${target}`,
            method: "delete",
            success: (response) => {
                if (response.status) window.location = "";
            },
            error: (err) => {
                return $.NotificationApp.send("Error", `${err.responseJSON.msg}`, "top-right", "rgba(0,0,0,0.2)", "error");
            }
        })
    })

    // Action: change status
    $(document).on("click", ".btn-status", function (e) {
        target = $(this).parent().parent().attr("id");
        $("#modal-status").modal("show");
    })

    $("#modal-status button[type='submit']").click(function (e) {
        $.ajax({
            url: `/api/user/change-status/${target}`,
            method: "put",
            success: (response) => {
                if (response.status) window.location = "";
            },
            error: (err) => {
                return $.NotificationApp.send("Error", `${err.responseJSON.msg}`, "top-right", "rgba(0,0,0,0.2)", "error");
            }
        })
    })

    // Build query url
    function buildQueryUrl(page, pageSize, search = "") {
        return `?page=${page}&pageSize=${pageSize}${search ? `&search=${search}` : ""}`;
    }
})()
</script>